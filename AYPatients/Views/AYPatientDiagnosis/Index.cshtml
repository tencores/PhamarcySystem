@model IEnumerable<AYPatients.Models.PatientDiagnosis>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Diagnosis.Name)
            </th>
            <th>
                lastName,firstName
            </th>            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Comments)
            </td>
            <td>
                <a asp-controller="AYPatientTreatment" asp-action="Index"
                   asp-route-patientDiagnosisId="@item.PatientDiagnosisId" asp-route-patientDiagnosisName="@item.Diagnosis.Name"
                   asp-route-patientId="@item.PatientId" asp-route-patientName="@item.Patient.LastName, @item.Patient.FirstName">
                    @item.Diagnosis.Name
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient.LastName),@Html.DisplayFor(modelItem => item.Patient.FirstName)
            </td>           

            <td>
                <a asp-action="Edit" asp-route-id="@item.PatientDiagnosisId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PatientDiagnosisId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PatientDiagnosisId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
